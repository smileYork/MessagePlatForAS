<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:text="设置服务器地址:"
        android:textColor="@color/grey"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_set_server_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:minLines="3" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <Button
            android:id="@+id/bt_fragement_set_server_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/bt_set"
            android:padding="5dp"
            android:text="检测"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_fragement_set_server_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/bt_set"
            android:padding="5dp"
            android:text="提交"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_fragement_set_server_return"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/bt_set"
            android:padding="5dp"
            android:text="返回"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>